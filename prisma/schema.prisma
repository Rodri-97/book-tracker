generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum BookStatus {
  TO_READ
  CURRENTLY_READING
  DID_NOT_FINISH
  READ
}

model User {
  id             String @id
  username       String @unique
  hashedPassword String

  sessions Session[]
  books    Book[]
}

model Session {
  id        String   @id
  userId    String
  expiresAt DateTime

  user User @relation(references: [id], fields: [userId], onDelete: Cascade)
}

model Book {
  id        String     @id @default(uuid())
  googleId  String
  userId    String
  user      User       @relation(references: [id], fields: [userId], onDelete: Cascade)
  title     String
  status    BookStatus @default(TO_READ)
  rating    Int?
  dateAdded DateTime   @default(now())
  dateRead  DateTime?

  @@unique([userId, googleId])
}
